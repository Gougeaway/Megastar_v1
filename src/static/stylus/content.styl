.content
	width 100%
	height 100%
	//padding-top 72px
	
	.about
		max-width 810px
		min-height 503px
		margin 0 auto
		//background-color #cccccc
		display flex
		justify-content space-between
		padding-top 68px
		
		.about__introduction
			width 54.3%
			display flex
			flex-direction column
			//justify-content space-between
			//background-color blue
			//margin-right auto

			.about__heading
				color fontColor
				font-size 45px
				font-weight 700
				line-height 55px
				text-transform uppercase
				//background-color dimgray
				margin-bottom 18px
				padding 0
				
			p:nth-of-type(1)			
				color fontColor
				font-size 18px
				font-weight 400
				line-height 26px
				//background-color gray
				margin-bottom 26px
			
			p:not(:nth-of-type(1))
				color fontColor
				font-size 16px
				font-weight 400
				line-height 24px	
				//background-color dimgray
				
			p:nth-of-type(2)			
				margin-bottom 23px
				
		.about__goals
			width 32.45%
			padding-top 155px
			//background-color dimgray
			position relative
				
			&::before
				content ''
				display block
				width 96px
				height 7px
				background-color fontColor
				position absolute
				top 121px
				left 0px		
				
			.goals__list__item
				//line-height 30px
				font-size 16px
				font-weight 700

			.goals__list__item-descr
				line-height 23px
				font-size 14px
				
			p:nth-of-type(1)
				margin-bottom 13px
				
			p:nth-of-type(2)
				margin-bottom 22px
				
			p:nth-of-type(3)
				margin-bottom 12px
				
			p:nth-of-type(4)
				margin-bottom 24px
				
			p:nth-of-type(5)
				color #7d8087
				font-size 14px
				
	.numbers
		width 100%
		
		.numbers__background
			width 100%
			height 385px
			background-color #e9e9e9
			padding-top 70px
			@media screen and (max-width: 415px)
				height 300px
			
			.numbers__inner
				max-width 940px
				height 100%	
				margin 0 auto
				//background-color pink
				
				.numbers__heading
					color fontColor
					font-size 30px
					font-weight 700
					text-transform uppercase
					text-align center
					@media screen and (max-width: 415px)
						font-size 20px
					
				.numbers__list
					max-width 100%
					//height 150px
					//background-color dimgray
					display flex
					justify-content space-between
					padding-top 60px
					
					.numbers__list__item
						flex-basis 205px
						
						&:first-child
							flex-basis 	170px
							
						&:last-child
							flex-basis 193px
							
						@media screen and (max-width: 415px)
							width 20%


						.list__big-number
							font-size 50px
							font-weight bold
							margin-bottom 10px
							@media screen and (max-width: 415px)
								font-size 20px
							
						.list__text
							font-size 18px
							line-height 24px
							@media screen and (max-width: 415px)
								font-size 12px
								line-height 12px
								word-wrap break-word
						
		.numbers__dev
			width 100%
			height 251px
			
			.numbers__text
				margin 70px auto 66px
				max-width 810px
				padding 0 4px 0 5px
				min-height 115px
				color fontColor
				font-size 20px
				font-weight bold
				line-height 32px
				
	.desktop__ver
		width 100%
		height 100%
		@media screen and (max-width: 415px)
			margin-top 40px
				
		
		.desktop__img
			margin 0 auto
			min-width 100%
			height 625px
			background url('../../../static/img/iPad_Mockup.png') 50% 50% no-repeat
			
		.desktop__descr	
			max-width 802px
			margin 0 auto
			padding-top 65px

			.desktop__heading
				font-size 30px
				font-weight bold
				text-transform uppercase
					
			.desktop__text	
				font-size 16px
				line-height 24px
				padding-top 30px
				
	.mobile__ver
		height 100%
		padding-top 65px
		padding-bottom 50px
		
		.mobile__img
			max-width 2500px
			height 1080px
			background url('../../../static/img/Front_Screen.png') 50% 50% no-repeat
			
		.mobile__descr
			max-width 802px
			margin 0 auto
			padding-top 65px
			
			.mobile__heading
				font-size 30px
				font-weight bold
				text-transform uppercase
				
			.mobile__text
				font-size 16px
				line-height 24px
				padding-top 30px
		

