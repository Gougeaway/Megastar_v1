.content
	width 100%
	height 100%
	//padding-top 72px
	
	.about
		max-width 810px
		height 503px
		margin 0 auto
		//background-color #cccccc
		display flex
		justify-content space-between
		padding-top 68px
		
		.about__introduction
			width 54.3%
			display flex
			flex-direction column
			//justify-content space-between
			//background-color blue
			//margin-right auto

			.about__heading
				color fontColor
				font-size 45px
				font-weight 700
				line-height 55px
				text-transform uppercase
				//background-color dimgray
				margin-bottom 18px
				padding 0
				
			p:nth-of-type(1)			
				color fontColor
				font-size 18px
				font-weight 400
				line-height 26px
				//background-color gray
				margin-bottom 26px
			
			p:not(:nth-of-type(1))
				color fontColor
				font-size 16px
				font-weight 400
				line-height 24px	
				//background-color dimgray
				
			p:nth-of-type(2)			
				margin-bottom 23px
				
		.about__goals
			width 32.45%
			padding-top 155px
			//background-color dimgray
			position relative
				
			&::before
				content ''
				display block
				width 96px
				height 7px
				background-color fontColor
				position absolute
				top 121px
				left 0px		
				
			.goals__list__item
				//line-height 30px
				font-size 16px
				font-weight 700

			.goals__list__item-descr
				line-height 23px
				font-size 14px
				
			p:nth-of-type(1)
				margin-bottom 13px
				
			p:nth-of-type(2)
				margin-bottom 22px
				
			p:nth-of-type(3)
				margin-bottom 12px
				
			p:nth-of-type(4)
				margin-bottom 24px
				
			p:nth-of-type(5)
				color #7d8087
				font-size 14px
				
	.numbers
		width 100%
		
		.numbers__background
			width 100%
			height 385px
			background-color #e9e9e9
			padding-top 70px
			
			.numbers__inner
				max-width 940px
				height 100%	
				margin 0 auto
				//background-color pink
				
				.numbers__heading
					color fontColor
					font-size 30px
					font-weight 700
					text-transform uppercase
					text-align center
					
				.numbers__list
					max-width 100%
					//height 150px
					//background-color dimgray
					display flex
					justify-content space-between
					padding-top 60px
					
					.numbers__list__item
						flex-basis 205px
						
						&:first-child
							flex-basis 	170px
							
						&:last-child
							flex-basis 193px

						.list__big-number
							font-size 50px
							font-weight bold
							margin-bottom 10px
							
						.list__text
							font-size 18px
							line-height 24px
						
		.numbers__dev
			width 100%
			height 251px
			
			.numbers__text
				margin 70px auto 66px
				max-width 810px
				padding 0 4px 0 5px
				min-height 115px
				color fontColor
				font-size 20px
				font-weight bold
				line-height 32px
				
	.desktop__ver
		width 100%
		height 100%
		
		.desktop__img
			margin 0 auto
			max-width 940px
			
		.desktop__descr	
			max-width 802px
			margin 0 auto
			padding-top 65px

			.desktop__heading
				font-size 30px
				font-weight bold
				text-transform uppercase
					
			.desktop__text	
				font-size 16px
				line-height 24px
				padding-top 30px
				
	.mobile__ver
		height 100%
		padding-top 65px
		padding-bottom 50px
		
		.mobile__img
			max-width 2500px
			height 1080px
			background url('../../../static/img/Front_Screen.png') 50% 50% no-repeat
			
		.mobile__descr
			max-width 802px
			margin 0 auto
			padding-top 65px
			
			.mobile__heading
				font-size 30px
				font-weight bold
				text-transform uppercase
				
			.mobile__text
				font-size 16px
				line-height 24px
				padding-top 30px
		
	.slider__wrapper
		width 100%
		height 750px
		background-color cornflowerblue
		margin-bottom 130px
		
	.dev__descr
		
		.descr__text
			font-size 20px
			font-weight bold
			line-height 32px
			margin 0 auto
			max-width 800px
			margin-bottom 70px
			
		.dev__img
			margin 0 auto
			max-width 940px
			margin-bottom 25px
			background-size cover
			
		.slider-controls
			width 90px
			height 7px
			margin 0 auto
			//background-color blue
			display flex
			justify-content space-between
			margin-bottom 73px
			
			.slide-tog
				display block
				border-radius 50%
				width 7px
				height 7px
				background-color #cccccc
				
				&_active
					background-color #2e3136
						
		.dev__ceo
			height 400px
			width 100%
			
			.dev__container_inner
				max-width 793px
				margin 0 auto
				//border 1px solid red
				display flex
				
				.dev__user
					flex-basis 200px
					
					.dev__name
						bold()
						font-size 16px
						margin-left 10px
						
					.dev__rank
						color #92959a
						text-transform uppercase
						font-size 14px
						margin-left 43px
					
				.dev__review
					flex-basis 593px
					//background-color #ccc

					.dev__text
						color #2e3136
						italic()
						font-size 18px
						font-style italic
						line-height 24px
						&:not(:last-child)
							margin-bottom 20px
		
	.catalog
		height 100%
		
		&__structure
			height 512px
			background-color #2e3136
			color #fff
			padding-top 75px
			
		&__heading, &__text
			max-width 805px
			margin 0 auto
			
		&__heading
			font-size 30px
			text-transform uppercase
			bold()
			margin-bottom 30px
		
		&__text
			font-size 16px
			line-height 24px
			
			&_mod
				margin-bottom 85px
				position relative
				
				&:before
					content ''
					position absolute
					width 96px
					height 7px
					background-color #2e3136
					top 125px
					left 0px
					
				
		&__content
			max-width 683px
			margin -245px auto 0
			margin-bottom 70px
			 
		&__team
			max-width 801px	
			height 280px
			margin 0 auto
			display flex 
			justify-content flex-start
			align-items flex-start
			
			img:not(:last-child)
				margin-right 17px

	.projects
		
		&__img
			height 600px
			background url('../../static/img/Layer_1.png') 50% 50% no-repeat 

		&__overlay
			width 100%
			height 100%
			background rgba(0, 0, 0, 0.5)


	.feedback
		height 560px
		background-color #52cceb
		padding-top 76px
		
		&__heading
			bold()
			font-size 50px
			font-weight 700
			text-transform uppercase
			color #fff
			width 433px
			margin 0 auto

		&__container
			max-width 680px
			height 410px
			margin 0 auto
			border 1px dashed white

			