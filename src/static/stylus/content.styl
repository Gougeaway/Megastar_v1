	/*   SWIPER   */
		
	.swiper-container
		width 230px 
		height 410px
		margin-top 40px
		margin-bottom 60px
		z-index 1
		
		
	.swiper-frame
		
		&::after
			content ''
			position absolute
			background url('../../../static/img/swiper_frame.png') 52.5% 49% no-repeat
			bottom -15%
			right -10%
			z-index -1
			width 260px
			height 520px
			


	.dev__descr
		@media screen and (max-width: 415px)
			padding-bottom 150px
		
		.descr__text
			font-size 20px
			font-weight bold
			line-height 32px
			margin 0 auto
			max-width 800px
			margin-bottom 70px
			
		.dev__img
			margin 0 auto	
			max-width 940px
			height 625px
			margin-bottom 25px
			background url('../../../static/img/Phone_5s.png') 50% 50% no-repeat
			//background-size cover
			
		.slider-controls
			width 90px
			height 7px
			margin 0 auto
			//background-color blue
			display flex
			justify-content space-between
			margin-bottom 73px
			
			.slide-tog
				display block
				border-radius 50%
				width 7px
				height 7px
				background-color #cccccc
				
				&_active
					background-color #2e3136
						
		.dev__ceo
			height 400px
			width 100%
			
			.dev__container_inner
				max-width 793px
				margin 0 auto
				//border 1px solid red
				display flex
				
				.dev__user
					flex-basis 200px
					
					.dev__name
						bold()
						font-size 16px
						margin-left 10px
						
					.dev__rank
						color #92959a
						text-transform uppercase
						font-size 14px
						margin-left 43px
					
				.dev__review
					flex-basis 593px
					//background-color #ccc
					@media screen and (max-width: 415px)
						padding 0 10px
				
					.dev__text
						color #2e3136
						italic()
						font-size 18px
						font-style italic
						line-height 24px
						&:not(:last-child)
							margin-bottom 20px
		
	.catalog
		height 100%
		
		&__structure
			height 512px
			background-color #2e3136
			color #fff
			padding-top 75px
			
		&__heading, &__text
			max-width 805px
			margin 0 auto
			
		&__heading
			font-size 30px
			text-transform uppercase
			bold()
			margin-bottom 30px
		
		&__text
			font-size 16px
			line-height 24px
			@media screen and (max-width: 415px)
				padding 0 10px
			
			&_mod
				margin-bottom 85px
				position relative
				
				&:before
					content ''
					position absolute
					width 96px
					height 7px
					background-color #2e3136
					top 125px
					left 0px
					@media screen and (max-width: 415px)
						top 250px
					
				
		&__content
			max-width 683px
			margin -245px auto 0
			margin-bottom 70px
			height 1045px
			background url('../../../static/img/Technocity_catalog_desktop.png') 50% 0% no-repeat
			background-size cover
			@media screen and (max-width: 415px)
				margin -130px auto 0
				background-size contain
			 
		&__team
			max-width 801px	
			height 280px
			margin 0 auto
			display flex 
			justify-content flex-start
			align-items flex-start
			
			img:not(:last-child)
				margin-right 17px

	.projects
		color #fff
		
		&__img
			height 600px
			background url('../../static/img/Layer_1.png') 50% 50% no-repeat 

		&__overlay
			width 100%
			height 100%
			background rgba(0, 0, 0, 0.5)
			padding 67px 0 0 62px
			
		&__container
			max-width 409px
			height 100%
		
		&__to-next
			font-size 20px
			bold()
			text-transform uppercase
			display inilne-block
			margin-bottom 313px
			max-width 260px
			position relative
			/*SUPER FANCY ARROW LUL*/
			&:before
				content ''
				position absolute
				display block
				width 21px
				height 2px
				background-color #ffffff
				top 10px
				left 263px
				
			&:after
				content ''
				position absolute
				display block
				width 10px
				height 10px
				background-color transparent
				top 5px
				left 272px
				border 0px
				border-bottom 2px
				border-right 2px
				border-style solid
				border-color #fff
				transform skewX(5deg) rotate(-45deg)
				
		&__title
			font-size 45px
			bold()
			text-transform uppercase
			margin-bottom 10px
			
		&__subtitle
			font-size 18px
			position relative
			
			&:after
				content ''
				width 96px
				height 7px
				background-color #fff
				top 51px
				left 0px
				position absolute

	.feedback
		height 560px
		background-color #52cceb
		padding-top 76px
		
		&__heading
			bold()
			font-size 50px
			font-weight 700
			text-transform uppercase
			color #fff
			max-width 433px
			margin 0 auto

		&__container
			max-width 680px
			height 410px
			margin 0 auto
			//border 1px dashed white

		&__form
			height 100%
			width 100%
			padding-top 40px
			display flex 
			flex-wrap wrap
			align-items flex-start

		&__form-input
			flex-basis 330px
			background-color #52cceb
			border none
			border-bottom 2px solid #90e0f4	
			color #e5faff
			font-size 20px
			line-height 30px
			height 40px				

			&::placeholder
				color #e5faff
				font-size 20px
				line-height 30px
				
			&:first-child
				margin-right 20px
				@media screen and (max-width: 696px)
					margin-right 0px
					
			/* FLEX ROW BREAK		
			&:nth-child(2)::after
				content ''
				flex-grow 1
				flex-basis 100%
				height 1px
				//background-color red
			*/
							
		&__form-textarea
			flex-grow 1
			flex-basis 100%
			background-color #52cceb
			color #e5faff
			font-size 20px
			line-height 30px
			border none
			border-bottom 2px solid #90e0f4	
			margin-top -20px
			
			
			&::placeholder
				color #e5faff
				font-size 20px
				line-height 30px
			
		&__form-button
			flex-grow 0
			flex-basis 264px
			height 54px
			background-color #ffffff
			color #15aed4
			font-size 18px
			line-height 30px
			cursor pointer
			border-radius 2px
			border none
			margin-left auto
			@media screen and (max-width: 415px)
				margin 0 auto