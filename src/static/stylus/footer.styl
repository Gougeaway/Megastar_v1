.footer
	width 100%
	height 293px
	background-color #2e3136
	color #fff
	@media screen and (max-width: 415px)
		height 170px
	
	&__container
		max-width 1040px
		height 100%
		margin 0 auto
		padding-top 55px
		display flex	
		@media screen and (max-width: 415px)
			flex-wrap wrap
			padding-top 20px

	&__logo
		flex-basis 314px
		max-width 314px
		@media screen and (max-width: 415px)
			display none
		
	&__logo-img
		margin-bottom 20px
		display block
			
	&__text
		color #81858c
		font-size 16px
		width 233px


	&__nav
		max-width 490px
		flex-basis 490px
		padding-top 75px
		display flex
		justify-content space-between
		@media screen and (max-width: 415px)
			width 100%
			padding-top 10px
		
		&-projects
			a:first-child
				margin-left 7px
				
		a
			display block
			text-decoration none
			
		a[href^="mailto:"]
			text-decoration underline
			margin-left 7px
			
			
		&-title-link
			color #fff
			font-size 20px
			bold()
			text-transform uppercase
			@media screen and (max-width: 415px)
				font-size 18px
						
		&-link
			color #f0f0f0
			font-size 18px
			margin-top 45px
			@media screen and (max-width: 415px)
				font-size 12px
				
				
			
		
	&__socials
		max-width 230px
		flex-basis 230px
		padding-top 75px
		//background-color cornflowerblue
		display flex
		justify-content flex-end
		@media screen and (max-width: 415px)
			padding-top 0

		a
			display block
			&:not(:last-child)
				margin-right 12px