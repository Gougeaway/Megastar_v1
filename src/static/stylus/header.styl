.header-wrapper
	width 100%
	height 600px
	
.header
	width 100%
	height 600px
	background url('../../static/img/header.png') 50% 50% no-repeat 
	
	.img-overlay
		width 100%
		height 100%
		background rgba(0, 0, 0, 0.5)
		padding-top 28px
	
	.header-inner
		max-width 1040px
		height 50px
		margin 0 auto
		background-color rgba(255, 127, 80, 0)
		display flex
		justify-content space-between
		
		.header-info
			background-color transparent
			width 400px  //39%
			display flex 
			justify-content space-between
			align-items center
			
			.header-phone 
				color white
				text-decoration none
				font-size 18px
				
			.header-contact-btn
				font-size 16px
				color white
				width 132px
				height 36px
				background-color #52cceb
				border-radius 2px
				padding 10px 27px 11px 
				margin-right 6px
					
			.header-burger
				width 48px
				height 48px
				background-color rgba(225, 225, 225, 0.2)
				
				.header-burder--inner
					width 24px
					height 2px
					background-color white
					position relative
					top 50%
					transform translateY(-50%)
					left 27.08333333%
					
					&::before, &::after
						content ''
						position absolute
						width 24px
						height 2px
						background-color white
						
					&::before
						top 7px
						
					&::after
						bottom 7px	
						
						

						